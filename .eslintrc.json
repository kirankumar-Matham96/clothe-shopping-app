{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "react-app",
    "plugin:react/recommended",
    "standard",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0
  },
  "lines-between-class-members": [
    "error",
    "always",
    { "exceptAfterSingleLine": true }
  ]
}
